<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:scrollbars="vertical">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:padding="4sp">
		<LinearLayout android:gravity="center"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:text="Id:"
				android:layout_height="wrap_content" android:layout_weight="0" />
			<EditText android:id="@+id/edit_id" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1" />
		</LinearLayout>

		<TextView android:layout_width="wrap_content" android:text="Name:"
			android:layout_height="wrap_content" />
		<EditText android:id="@+id/edit_name" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<TextView android:layout_marginTop="20sp" android:text="Latitude:"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<EditText android:id="@+id/edit_latitude"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:textSize="28sp" />

		<TextView android:layout_width="wrap_content" android:text="Longitude:"
			android:layout_height="wrap_content" />
		<EditText android:id="@+id/edit_longitude"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="28sp" />

		<LinearLayout android:layout_marginTop="20sp"
			android:gravity="center" android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<Button android:id="@+id/edit_set" android:text="Save"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" />
			<Button android:id="@+id/edit_cancel" android:text="Discard changes"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>

	</LinearLayout>
</ScrollView>
	
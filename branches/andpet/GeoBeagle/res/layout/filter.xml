<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:minWidth="280px">

  <TextView android:id="@+id/TextFilterTitle" android:layout_width="fill_parent" android:layout_height="wrap_content"
     android:gravity="center_horizontal" android:textSize="20sp" android:text="Cache types to show">
  </TextView>

<ScrollView
		android:id="@+id/scrollview"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1">

	<LinearLayout
		android:id="@+id/widget30"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
        android:padding="10px">

    <CheckBox android:id="@+id/CheckBoxTrad" android:text="Traditional" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxMulti" android:text="Multi" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxMystery" android:text="Mystery" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxMyLocation" android:text="My location" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxOthers" android:text="Other types" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxWaypoints" android:text="Waypoints" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxMicro" android:text="Include micro's" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>
  
  <CheckBox android:id="@+id/CheckBoxSmall" android:text="Include small" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxUnknownSize" android:text="Include unknown sizes" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <CheckBox android:id="@+id/CheckBoxOnlyFavorites" android:text="Only Favorites" 
     android:layout_width="fill_parent" android:layout_height="wrap_content">
  </CheckBox>

  <LinearLayout
		android:id="@+id/widget31"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
    <TextView android:id="@+id/TextView02" android:layout_width="wrap_content" 
      android:layout_height="wrap_content" android:text="Required text">
    </TextView>
    <EditText android:id="@+id/FilterString" android:text="&lt;Filter string&gt;" 
      android:layout_height="wrap_content" android:layout_width="fill_parent" 
      android:singleLine="true">
    </EditText>
  </LinearLayout>

</LinearLayout>

</ScrollView>

  <Button android:text="Apply filter" android:id="@+id/ButtonApplyFilter" 
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:gravity="center_horizontal"></Button>

</LinearLayout>
